  <script>
    const themeToggle = document.getElementById('themeToggle');
    themeToggle.addEventListener('click', () => {
      document.documentElement.classList.toggle('light-mode');
      themeToggle.textContent = document.documentElement.classList.contains('light-mode') ? 'åˆ‡æ¢å¤œé—´æ¨¡å¼' : 'åˆ‡æ¢æ—¥é—´æ¨¡å¼';
    });

    const vibeBtn = document.getElementById('vibeBtn');
    vibeBtn.addEventListener('click', () => {
      const c1 = '#' + Math.floor(Math.random()*16777215).toString(16);
      const c2 = '#' + Math.floor(Math.random()*16777215).toString(16);
      document.body.style.background = `linear-gradient(${Math.random()*360}deg, ${c1}, ${c2})`;
    });

    const simBox = document.getElementById('simBox');
    const simInput = document.getElementById('simInput');
    const simSend = document.getElementById('simSend');
    const vibeReplies = ['Vibe æ˜¯ä½ ç»™ä¸–ç•Œçš„é¢‘ç‡ï¼šå…ˆæŠŠè‡ªå·±è°ƒåˆ°èˆ’æœçš„é¢‘é“ã€‚', 'æŠŠæ³¨æ„åŠ›æ”¾å›å‘¼å¸é‡Œï¼Œä½ çš„æ°”åœºä¼šè‡ªåŠ¨ç«™ç¨³ã€‚', 'è®©ç¯å¢ƒä¸ºä½ æœåŠ¡ï¼šæ”¶æ‹¾æ¡Œé¢ã€ç‚¹ä¸€ç›ç¯ã€‚'];

    function doSimulate() {
      const text = simInput.value.trim();
      if (!text) return;
      const p = document.createElement('div');
      p.textContent = `ä½ ï¼š${text}`;
      simBox.appendChild(p);
      simInput.value = '';
      setTimeout(() => {
        const reply = document.createElement('div');
        reply.style.color = '#a855f7';
        reply.textContent = `çµæ„Ÿï¼š${vibeReplies[Math.floor(Math.random()*vibeReplies.length)]}`;
        simBox.appendChild(reply);
        simBox.scrollTop = simBox.scrollHeight;
      }, 600);
    }
    simSend.addEventListener('click', doSimulate);

    const fab = document.getElementById('chatFab');
    const win = document.getElementById('chatWindow');
    fab.addEventListener('click', () => win.classList.toggle('open'));
    document.getElementById('chatClose').addEventListener('click', () => win.classList.remove('open'));
  </script>
